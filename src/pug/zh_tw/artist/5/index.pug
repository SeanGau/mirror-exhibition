        $( document ).ready(function() {
            startItro(2000);
        })
        
        let carouselDisc = new bootstrap.Carousel($("#carouselDisc").first(), {
        })
        $("#carouselImg").on("slide.bs.carousel", function(e) {
            console.log(e)
            carouselDisc.to(e.to)
            carouselDisc.pause()
